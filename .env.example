# CLMS Environment Configuration
# Copy to .env and fill in values

# Database (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=clms
DB_USER=root
DB_PASS=

# App
APP_ENV=development
APP_DEBUG=1
APP_URL=http://localhost/cargochina

# Variance thresholds (TBD - placeholder values)
VARIANCE_THRESHOLD_PERCENT=10
VARIANCE_THRESHOLD_ABS_CBM=0.1

# Confirmation policy: variance-only | always-on-arrival
CONFIRMATION_REQUIRED=variance-only

# Photo visibility: internal-only | customer-visible
CUSTOMER_PHOTO_VISIBILITY=internal-only

# Notification channels: dashboard, email, whatsapp (comma-separated)
NOTIFICATION_CHANNELS=dashboard

# Upload limits (bytes)
UPLOAD_MAX_SIZE=5242880
